#!/bin/bash

result=0

MY_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

echo -e "\nVetting packages for potential issues..."
$MY_DIR/govet
let "result+=$?"

echo -e "\nTesting packages..."
ginkgo -p -r -race -failOnPending -randomizeAllSpecs "$@" $MY_DIR/..
let "result+=$?"

echo -e "\nExit Code: $result"
exit $result
